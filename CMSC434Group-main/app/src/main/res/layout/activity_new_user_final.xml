<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:background="#00071A">

    <ImageButton
        android:id="@+id/backButtonToFst"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/previous30x30"
        android:background="@null"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="12.5dp" />

    <TextView
        android:id="@+id/welcomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Healthify"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/instructionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please input the information to create account."
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="17.5dp" />

    <EditText
        android:id="@+id/nameEntry"
        android:inputType="text"
        android:layout_width="350dp"
        android:layout_height="32.5dp"
        app:backgroundTint="#374463"
        android:background="#374463"
        android:textColor="@android:color/white"
        android:layout_gravity="left"
        android:hint =" Full Name"
        android:textColorHint = "#8497B0"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight:"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_gravity="left"/>

        <Space
            android:layout_width="16.5dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/weightEntry"
            android:inputType="numberDecimal"
            android:hint =" 0"
            android:layout_width="175dp"
            android:layout_height="32.5dp"
            android:textColor="@android:color/white"
            android:background="#374463"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/weightPoundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lb"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_gravity="left"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height:"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_gravity="left"/>

        <Space
            android:layout_width="18.5dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/heightEntryFt"
            android:inputType="numberDecimal"
            android:hint =" 0"
            android:layout_width="100dp"
            android:layout_height="32.5dp"
            android:textColor="@android:color/white"
            android:background="#374463"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/heightFtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ft"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/heightEntryIn"
            android:inputType="numberDecimal"
            android:hint =" 0"
            android:layout_width="100dp"
            android:layout_height="32.5dp"
            android:textColor="@android:color/white"
            android:background="#374463"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/heightInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_gravity="left"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <Spinner
            android:id="@+id/genderType"
            android:layout_width="wrap_content"
            android:layout_height="37.5dp"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#374463"
            android:textColor="@android:color/white"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fitnessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness:"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic" />

        <Space
            android:layout_width="14dp"
            android:layout_height="0dp" />

        <Spinner
            android:id="@+id/fitnessType"
            android:layout_width="wrap_content"
            android:layout_height="37.5dp"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#374463"
            android:textColor="@android:color/white"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/addUserButton"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:backgroundTint="#374463" />

        <Space
            android:layout_width="0dp"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/cancelAddUserButton"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Cancel"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:backgroundTint="#374463" />


    </LinearLayout>


</LinearLayout>